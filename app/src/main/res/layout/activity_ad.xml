<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sofia.gestipro1.rb1">

    <TextView
        android:text="Acerca de"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView33"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:layout_marginBottom="22dp"
        android:layout_alignBottom="@+id/imageView8" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/log"
        android:id="@+id/imageView8"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView33"
        android:layout_toEndOf="@+id/textView33" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_marginTop="-100dp">


            <TextView
                android:text="Gestipro es un gestionador de productos para pedidos de alimentos. "
                android:layout_width="276dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView35"
                android:layout_marginTop="100dp"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <TextView
                android:text="Esta aplicación está desarrollada en Android Studio, y está vinculada con la aplicacion Gestipro para escritorio, desarrollada en Java."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView36" />

            <TextView
                android:text="La base de datos se creó en MYSQL server y se gestionó por medio de php."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView37" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/as"
                    android:id="@+id/imageView18"
                    android:layout_weight="1" />

                <ImageView
                    app:srcCompat="@mipmap/javalogo"
                    android:id="@+id/imageView10"
                    android:layout_weight="1"
                    android:layout_width="100dp"
                    android:layout_height="130dp" />


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@mipmap/phplogo"
                    android:id="@+id/imageView20"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/mysqllogo"
                    android:id="@+id/imageView19"
                    android:layout_weight="1" />
            </LinearLayout>
            <TextView
                android:text="Creación y desarrollo: Sofía Ruiz Velasco Aguilera "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView38"
                android:layout_weight="1" />
            <TextView
                android:text="Marketing: Maité Ruiz Velasco Aguilera "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView39"
                android:layout_weight="1" />

            <Button
                android:text="Ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/br" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>

